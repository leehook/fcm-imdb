<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/nextform_root" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TableLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:padding="3dip">

		<TableRow android:layout_width="match_parent"
			android:layout_height="wrap_content" android:gravity="left">

			<TextView android:id="@+id/ruoloNext" android:textSize="10sp"
				android:textStyle="bold" />

			<TextView android:id="@+id/cognomeNext" android:ellipsize="end"
				android:lines="1" android:textSize="10sp" android:textStyle="bold" />

		</TableRow>
	</TableLayout>

</RelativeLayout>